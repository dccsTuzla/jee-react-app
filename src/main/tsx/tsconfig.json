{
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./app/themes/icons/Icons.d.ts"
  ]
}
